int __io_putchar(int chr)
{
	HAL_UART_Transmit(&huart2, (uint8_t*) &chr, 1, HAL_MAX_DELAY);

	return chr;
}

int adc_available = 0;

void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef *hadc)
{
	adc_available = 1;
}
while (1)
	{
		if (adc_available == 1)
		{
			adc_available = 0;
			for(int itr = 0 ; itr < 4 ; itr++)
			{
				printf("%u\t", adc_tab[itr]);
			}
			printf("\r\n");
